<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ComposeActivity">

        <EditText
            android:id="@+id/etQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:ems="10"
            android:hint="insert quote..."
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnQuotePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/profile_recap_button"
            android:text="Post"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnQuoteSteppingStone" />

        <Button
            android:id="@+id/btnQuoteSelfCare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/location_custom_button"
            android:text="Self-Care"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/btnQuoteFood"
            app:layout_constraintTop_toBottomOf="@+id/tvQuoteCategory" />

        <Button
            android:id="@+id/btnQuoteFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/location_custom_button"
            android:text="Food"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuoteCategory" />

        <Button
            android:id="@+id/btnQuoteFamily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/location_custom_button"
            android:text="Family"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btnQuoteSelfCare"
            app:layout_constraintTop_toBottomOf="@+id/tvQuoteCategory" />

        <Button
            android:id="@+id/btnQuoteTravel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="48dp"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/location_custom_button"
            android:text="Travel"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/btnQuotePost"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnQuoteFood"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnQuoteActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="48dp"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/location_custom_button"
            android:text="Active"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/btnQuotePost"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toEndOf="@+id/btnQuoteSteppingStone"
            app:layout_constraintTop_toBottomOf="@+id/btnQuoteFamily"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnQuoteSteppingStone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/location_custom_button"
            android:fontFamily="@font/roboto_medium"
            android:text="Milestone"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/btnQuoteTravel"
            app:layout_constraintTop_toBottomOf="@+id/btnQuoteSelfCare" />

        <TextView
            android:id="@+id/tvQuoteCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:text="Which type of memory did you create? "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etQuote" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>